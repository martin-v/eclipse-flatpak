{
	"app-id": "org.eclipse.Eclipse",
	"branch": "lombok",
	"runtime": "org.gnome.Sdk",
	"runtime-version": "3.28",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": [
			"org.freedesktop.Sdk.Extension.openjdk9"
	],
	"command": "eclipse",
	"finish-args": [
		"--socket=x11",
		"--share=network",
		"--filesystem=home",
		"--filesystem=~/.m2:create",
		"--filesystem=~/.eclipse:create",
		"--filesystem=/etc/hosts:ro",
		"--env=PATH=/app/bin:/usr/bin:/app/jre/bin",
		"--env=JAVA_HOME=/app/jre/"
	],
	"cleanup": [
		"/COPYRIGHT",
		"/LICENSE",
		"/README",
		"/release",
		"/THIRDPARTYLICENSEREADME-JAVAFX.txt",
		"/THIRDPARTYLICENSEREADME.txt",
		"/Welcome.html",
		"/plugin",
		"/man",
		"/lib/applet",
		"/lib/desktop",
		"/eclipse/readme",
		"/eclipse/notice.html"
	],
	"modules": [
		{
			"name": "openjdk",
			"buildsystem": "simple",
			"build-commands": [
					"/usr/lib/sdk/openjdk9/install.sh"
			]
		},
		{
			"name": "eclipse",
			"no-autogen": true,
			"sources": [
				{
					"type": "archive",
					"url": "http://ftp-stud.fht-esslingen.de/pub/Mirrors/eclipse/technology/epp/downloads/release/oxygen/3/eclipse-java-oxygen-3-linux-gtk-x86_64.tar.gz",
					"sha512": "c8238731def1d61cbf69fd2f5602af61fc5b3e9f6e9bdaa8057c01ecd2b071c3717ec69195e1f03f52f1dc8b3eff3172daf3192d519e8d104e0d6d411b7478c2",
					"dest": "eclipse"
				},
				{
					"type": "file",
					"path": "Makefile",
					"dest-filename": "Makefile"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.png"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.desktop"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.appdata.xml"
				},
				{
					"type": "file",
					"url": "https://projectlombok.org/downloads/lombok-1.16.20.jar",
					"sha512": "c5760ac4dfb76ae8615716d8981509cd7861d1974577814285c6334cc1177036e74f07dbb0f3cd385914e3032d3bc16c7afda63746987a2b480fbc115efc9b9f",
					"dest": "eclipse",
					"dest-filename": "lombok.jar"
				}
			]
		}
	]
}
